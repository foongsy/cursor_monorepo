# Environment Configuration
# =======================

# Application Environment
# Options: development, staging, production
ENV=development

# Enable debug mode (verbose error messages, auto-reload)
DEBUG=true

# Server Configuration
# ====================

# Port for the API server
PORT=8000

# Host to bind to (0.0.0.0 allows external connections)
HOST=0.0.0.0

# CORS Configuration
# ==================

# Allowed origins for CORS (Cross-Origin Resource Sharing)
# Accepts JSON array OR comma-separated values
CORS_ORIGINS=["http://localhost:5173", "https://your-frontend-url.onrender.com"]
# Alternative format (comma-separated): 
# CORS_ORIGINS=http://localhost:5173,https://your-frontend-url.onrender.com
# Note: In development mode, common localhost ports are automatically added

# Middleware Configuration
# ========================

# Enable GZip compression for responses
ENABLE_COMPRESSION=true

# Minimum response size (in bytes) to trigger compression
COMPRESSION_MINIMUM_SIZE=1000

# Logging Configuration
# =====================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

